<section class="main-body">
    <h2 class="message">For your groceries, <b>{{winner}}</b> has the most locally sourced produce </h2>
    <div class="results-list">
        {{#each result}}
        <div class="result-box">
            <div>
                <a class="ranking-name"
                    href="/itemsbysupermarket?{{../queryString}}&supermarket={{this.supermarket_id}}&score={{rounder this.score}}">
                    #{{indexplusone @index}}: {{this.sname }}

                </a>
                <p class="label">
                    <img src="assets/{{scorer this.score}}.png" alt="food-mileage-score-img">

                </p>
                <p class="word-rating">
                    {{labels this.score}}
                </p>
                <a class="link" href="/itemsbysupermarket?{{../queryString}}&supermarket={{this.supermarket_id}}&score={{rounder this.score}}">
                    <p class="button breakdown">View breakdown</p>
                </a>
            </div>

        </div>
        {{/each}}
    </div>
</section>
